    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Run bot",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/compounding-bot",
            "args": [
				"cfg/BNB_testnet.json"
			],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake Build",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}